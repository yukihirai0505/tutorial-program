{
  "env": {
    "node": true,
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "never"
    ],
    "no-console": 0,
    "comma-dangle": [
      2,
      "never"
    ],
    "react/jsx-uses-vars": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-space-before-closing": [
      2,
      "always"
    ],
    "prettier/prettier": [
      "error",
      {
        "jsxBracketSameLine": false,
        "tabWidth": 2,
        "trailingComma": "none",
        "semi": false,
        "singleQuote": true
      }
    ]
  }
}
